@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>yeni yazar ekleme</h1> 
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post)) //ne için yapıyorsun, controller ismi, başlama zamanı
{
    <div class="form-group">
        @Html.Label("başlık adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })dropdown devamı controllerdaki
        <br />
        @Html.Label("yazar ")
        @Html.DropDownListFor(x=>x.WriterID,(List<SelectListItem>)ViewBag.vlw   , new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.WriterID)
        <br />
        <button class="btn btn-info">başlığı oluştur</button>
    </div>
}


